<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ProyectoMovil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_300</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorOnPrimary">@color/white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">@color/black_1000</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.ProyectoMovil">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white_1000</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">300</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/brand_name_bottom</item>
        <item name="postSplashScreenTheme">@style/Theme.ProyectoMovil</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
    <style name="text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="StatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="TextColor" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white_1000</item>
    </style>
</resources>