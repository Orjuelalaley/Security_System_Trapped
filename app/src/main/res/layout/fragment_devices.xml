<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.DevicesFragment">

    <Button
        android:id="@+id/button_camara_sala_"
        android:layout_width="341dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green_800"
        android:drawableStart="@drawable/camera_icon"
        android:drawableTint="@color/white_1000"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/camara_room"

        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <Switch
        android:id="@+id/sensor_movimiento_sala_switch"
        android:layout_width="341dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_switch"
        android:drawableStart="@drawable/sensor_icon"
        android:drawableTint="@color/white_1000"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/movement_sensor"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</LinearLayout>